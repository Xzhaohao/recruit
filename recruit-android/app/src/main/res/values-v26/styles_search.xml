<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 搜索框 -->
    <style name="search_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:drawableEnd">@drawable/icon_search</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingHorizontal">13sp</item>
        <item name="android:textColorHint">@color/tabBar_unselected</item>
        <item name="android:background">@drawable/search_input_bg</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- 搜索页面的搜索框 -->
    <style name="search_page_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingHorizontal">13sp</item>
        <item name="android:textColorHint">@color/tabBar_unselected</item>
        <item name="android:background">@drawable/search_input_bg2</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <!-- 搜索页面标题 -->
    <style name="search_page_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/blackText3</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 搜索页面 tag -->
    <style name="search_tag" parent="TagGroup">
        <item name="atg_textColor">@color/blackText3</item>
        <item name="atg_borderColor">#EEEEEE</item>
        <item name="atg_backgroundColor">#EEEEEE</item>
        <item name="atg_verticalPadding">6dp</item>
        <item name="atg_horizontalPadding">15dp</item>
    </style>

    <!-- 搜索页面 猜你喜欢 tag -->
    <style name="search_like_tag" parent="search_tag">
        <item name="atg_textColor">@color/white</item>
        <item name="atg_borderColor">@color/aoColor2</item>
        <item name="atg_backgroundColor">@color/aoColor2</item>
    </style>
</resources>