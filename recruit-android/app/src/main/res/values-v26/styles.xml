<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 搜索框 -->
    <style name="search_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:drawableEnd">@drawable/icon_search</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingHorizontal">13sp</item>
        <item name="android:textColorHint">@color/tabBar_unselected</item>
        <item name="android:background">@drawable/search_input_bg</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
    </style>
</resources>